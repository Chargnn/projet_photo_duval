@model IEnumerable<projet_photo_duval.Models.Photo>
<table class="table table-bordered">
    <tr>
        <th class="col-md-4">
            @Html.DisplayNameFor(model => model.Nom)
        </th>
        <th class="col-md-4">
            @Html.DisplayName("Photo")
        </th>
        <th class="col-md-4">
            @Html.DisplayNameFor(model => model.Commentaire)
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nom)
            </td>
            <td>
                <img width="200" height="200" src="data:image;base64,@Convert.ToBase64String(item.Photo1)" />
            </td>
            <td>
                @if (item.Commentaire.IsEmpty())
                {
                    @Html.ActionLink("Ajouter un commentaire", "AjouterCommentaire", "Photos", new { photoId = item.Photo_ID }, null)
                }
                else
                {
                    @Html.DisplayFor(modelItem => item.Commentaire)
                }
            </td>
        </tr>
    }

    @if (Model.Count() > 0)
        {
        <tr>
            <td>
                @Html.ActionLink("Télécharger les photos", "DownLoadPhoto", new { id = Model.First().Seance_ID })
            </td>
        </tr>
        }
</table> 