@model IEnumerable<projet_photo_duval.Models.Photo>
<table class="table table-bordered">
    <tr>
        <th class="col-md-4">
            @Html.DisplayNameFor(model => model.Nom)
        </th>
        <th class="col-md-4">
            @Html.DisplayName("Photo")
        </th>
        <th class="col-md-2"></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nom)
            </td>
            <td>
                <img width="100" height="100" src="data:image;base64,@Convert.ToBase64String(item.Photo1)" />
            </td>

            <td>
                @Html.ActionLink("Download", "DownLoadPhoto", new { id = item.Seance_ID })

            </td>
        </tr>
    }

</table> 