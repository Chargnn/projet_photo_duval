@model IEnumerable<projet_photo_duval.Models.Photo>
@if (Model.Count() > 0)
{
<h2>Liste des photos de la séance</h2>
}
<table class="table table-bordered">
    <tr>
        @if (Model.Count() > 0)
        {
        <th class="col-md-4">
            @Html.DisplayNameFor(model => model.Nom)
        </th>
        <th class="col-md-4">
            @Html.DisplayName("Photo")
        </th>
        <th class="col-md-4">
            @Html.DisplayNameFor(model => model.Commentaire)
        </th>
        <th class="col-md-4">
            @Html.DisplayName("Supprimer")
        </th>
        }
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nom)
            </td>
            <td>
                <img width="200" height="200" src="data:image;base64,@Convert.ToBase64String(item.Photo1)" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Commentaire)
            </td>
            @if (!item.Equals(null))
            {
                <td>
                    @Html.ActionLink("Supprimer", "DeletePhoto", new { id = Model.First().Photo_ID})
                </td>
            }
            
        </tr>
    }

    @if (Model.Count() > 0)
        {
        <tr>
            <td>
                @Html.ActionLink("Télécharger les photos", "DownLoadPhoto", new { id = Model.First().Seance_ID })
            </td>
        </tr>
        }
</table> 