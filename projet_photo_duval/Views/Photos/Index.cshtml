@model IEnumerable<projet_photo_duval.Models.Photo>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Photo1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Seance.Adresse)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
