@model projet_photo_duval.Models.Seance

@{
    ViewBag.Title = "Create";
}

<h2>Réservation de rendez-vous</h2>

@if (ViewBag.MessageError != "")
{
    @Html.Raw("<div class='alert alert-danger'><strong>Erreur! </strong>")
    @ViewBag.MessageError
    @Html.Raw("</div>")
}

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Seance</h4>
        <hr />

        <div class="form-group">
            @Html.Label("Nom de l'agent", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("Agent_ID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Agent_ID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Adresse, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Adresse, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Adresse, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Début du rendez-vous", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.DateSeance, new { htmlAttributes = new { @class = "form-control", type= "datetime-local" } })
                @Html.ValidationMessageFor(model => model.DateSeance, "", new { @class = "text-danger" })
            </div>
        </div>

            @*<div class="form-group">
        @Html.Label("Fin du rendez-vous", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.DateFinSeance, new { htmlAttributes = new { @class = "form-control", type = "datetime-local" } })
            @Html.ValidationMessageFor(model => model.DateFinSeance, "", new { @class = "text-danger" })
        </div>
    </div>*@

        <div class="form-group">
            @Html.LabelFor(model => model.Ville, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Ville, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Ville, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Retour", "Index") | <a href="../Home/Index">Retour à l'accueil</a>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
